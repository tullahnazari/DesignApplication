<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="170dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter" android:background="@color/colorAccent"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TeeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="36sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" app:fontFamily="cursive"
            app:layout_constraintStart_toEndOf="@+id/logo" android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView15"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toStartOf="@+id/imageView16"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            android:layout_marginLeft="24dp" android:layout_marginRight="32dp" android:layout_marginEnd="32dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView16"
            app:layout_constraintStart_toEndOf="@+id/imageView15" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView17" app:layout_constraintTop_toTopOf="@+id/imageView15"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15" android:layout_marginLeft="24dp"
            android:layout_marginRight="32dp" android:layout_marginEnd="32dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView17"
            app:layout_constraintStart_toEndOf="@+id/imageView16" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView16" android:layout_marginLeft="24dp"
            android:layout_marginRight="32dp" android:layout_marginEnd="32dp"/>
    <Button
            android:text="Customize Your Dashboard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            android:background="@drawable/rounded_gradient"
            style="@android:style/Widget.Holo.Button"
            android:textColor="@color/colorAccent"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier3" app:barrierDirection="left"
                                        tools:layout_editor_absoluteX="1280dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView19"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintDimensionRatio="21:8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView20"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView19" app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintDimensionRatio="21:8" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView19" android:layout_marginLeft="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/imageView19" app:layout_constraintStart_toStartOf="@+id/guideline4"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView22" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView22"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView21" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintDimensionRatio="2:1"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline4"
            android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>